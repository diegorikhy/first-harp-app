.villages-page(class="container-fluid")
  div(ng-if="ctrl.loading")
    i.fa(class="fa-circle-o-notch fa-spin")
    |  Carregando vilas...

  .row(ng-hide="ctrl.loading")
    h2 Vilas
    hr.star-primary

    div.erro(ng-if="ctrl.erro") {{ctrl.erro}}

    table.table(class="text-left")
      tbody
        tr.text-large(ng-repeat="village in ctrl.villages" class="middle")
          td {{village.name}}
          td {{village.role}}
          td
            img.townhall(ng-src="img/town-hall/th{{village.cv_level}}.png")
